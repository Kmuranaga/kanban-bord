<div class="sinupPage">
  <div class="titleArea">
    <h1>パスワードをお忘れですか？</h1>
  </div>
  <div class='container'>
    <%= form_with scope: resource, as: resource_name, url: password_path(resource_name), html: { class: "mt-5, signupForm" }, local: true do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      <div class="text-center">
        <%= f.label :email_set %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      </div>

      <div class="text-center">
        <%= f.submit "パスワードを再設定", class: "btn submitBtn" %>
      </div>
    <% end %>
    <div class="text-center"><%= render "devise/shared/links" %></div>
  </div>
</div>
