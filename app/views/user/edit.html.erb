<div class="listeditPage">
  <div class="container">
    <%= form_with model: @user, url: { action: :update }, html: { class: 'listForm' }, local: true do |f| %>
      <% if @user.errors.any? %>
        <p class="text-danger">名前は1～25文字以内で入力してください</p>
      <% end %>
      <%= f.label :name %>
      <%= f.text_field :name, class: "form-control listName", placeholder: "ユーザ名" %>
      <div class="text-center">
        <div class="btnBase">
          <%= history_back_button_tag %>
        </div>
        <div class="btnBase">
          <%= f.submit "編集する", class: "submitBtn" %>
        </div>
      </div>
    <% end %>
  </div>
</div>
